<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kihon.android.apps.army_logout">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.kihon.android.apps.army_logout.AppApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.kihon.android.apps.army_logout.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name_short"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kihon.android.apps.army_logout.WidgetSettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/action_change_widget_bgcolor"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.kihon.android.apps.army_logout.LegacyMainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name_short"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Legacy"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.kihon.android.apps.army_logout.PhotoShareActivity"
            android:configChanges="orientation|screenSize"
            android:label=""
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!--<activity android:name="com.facebook.LoginActivity" />-->

        <receiver
            android:name="com.kihon.android.apps.army_logout.CounterWidget"
            android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/counter_widget_info" />
        </receiver>

        <service android:name="com.kihon.android.apps.army_logout.CounterWidget$UpdateService" />

        <service android:name="com.kihon.android.apps.army_logout.fcm.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="com.kihon.android.apps.army_logout.fcm.FirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ecb619f587c04113cde9e096267c370f8b696249"
            />

    </application>

</manifest>